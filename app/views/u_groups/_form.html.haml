= form_for @u_group do |f|
  -if @u_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@u_group.errors.count, "error")} prohibited this u_group from being saved:"
      %ul
        - @u_group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
